pipeline {
    agent any

    environment {
        TF_VERSION = "1.6.6"
        TF_ROOT = "envs"
    }

    parameters {
        choice(name: 'ENVIRONMENT', choices: ['staging', 'shared','prod'], description: 'Select which environment to deploy')
        booleanParam(name: 'AUTO_APPLY', defaultValue: false, description: 'Apply Terraform changes automatically?')
        booleanParam(name: 'DESTROY', defaultValue: false, description: 'Destroy infrastructure?')
    }

    stages {
        stage('Setup Terraform') {
            steps {
                script {
                    sh '''
                        if ! command -v terraform >/dev/null 2>&1; then
                            echo "Installing Terraform..."
                            sudo apt-get update -y
                            sudo apt-get install -y unzip wget
                            wget https://releases.hashicorp.com/terraform/${TF_VERSION}/terraform_${TF_VERSION}_linux_amd64.zip
                            unzip terraform_${TF_VERSION}_linux_amd64.zip
                            sudo mv terraform /usr/local/bin/
                            terraform -v
                        else
                            echo "Terraform already installed."
                            terraform -v
                        fi
                    '''
                }
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Devops8989/infra-terraform.git'
            }
        }

        stage('Verify IAM Role Access') {
            steps {
                sh '''
                    echo "Verifying IAM Role credentials..."
                    aws sts get-caller-identity
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_ROOT}/${ENVIRONMENT}") {
                    sh '''
                        echo "Initializing Terraform for ${ENVIRONMENT}..."
                        terraform init -input=false
                    '''
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_ROOT}/${ENVIRONMENT}") {
                    sh '''
                        echo "Validating Terraform configuration..."
                        terraform validate
                    '''
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_ROOT}/${ENVIRONMENT}") {
                    sh '''
                        echo "Running Terraform plan for ${ENVIRONMENT}..."
                        terraform plan -out=tfplan -input=false
                    '''
                }
            }
        }

        stage('Approval Gate (Manual)') {
            when {
                expression { return params.AUTO_APPLY == false && params.DESTROY == false }
            }
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    input message: "Review the plan above for environment: ${ENVIRONMENT}. Proceed with Apply?"
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { return params.AUTO_APPLY == true || currentBuild.rawBuild.getAction(hudson.model.ParametersAction)?.getParameter('AUTO_APPLY') == null }
            }
            steps {
                dir("${TF_ROOT}/${ENVIRONMENT}") {
                    sh '''
                        echo "Applying Terraform changes for ${ENVIRONMENT}..."
                        terraform apply -input=false -auto-approve tfplan
                    '''
                }
            }
        }

        stage('Terraform Destroy (Manual)') {
            when {
                expression { return params.DESTROY == true }
            }
            steps {
                dir("${TF_ROOT}/${ENVIRONMENT}") {
                    sh '''
                        echo "Destroying infrastructure for ${ENVIRONMENT}..."
                        terraform destroy -auto-approve
                    '''
                }
            }
        }
    }

    post {
        always {
            dir("${TF_ROOT}/${ENVIRONMENT}") {
                sh 'terraform output || true'
            }
        }
        success {
            echo "✅ Terraform pipeline for ${ENVIRONMENT} completed successfully."
        }
        failure {
            echo "❌ Terraform pipeline for ${ENVIRONMENT} failed."
        }
    }
}
